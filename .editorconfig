# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{py,rst,ini}]
max_line_length = 79

[Makefile]
indent_style = tab

[.travis.yml]
indent_size = 2

[*.sh]
max_line_length = 79
indent_size = 2
